<h1>Log in</h1>

<%= form_with url: login_path, method: :post do |form| %>
  <div>
    <%= form.label :email, "Email Address", style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password, "Password", style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log in" %>
  </div>
<% end %>