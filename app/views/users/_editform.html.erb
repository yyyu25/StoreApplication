<%= form_with(model: @user) do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div>
    <%= form.label :first_name, "First Name", style: "display: block" %>
    <%= form.text_field :first_name %>
    </div>

    <div>
    <%= form.label :last_name, "Last Name", style: "display: block" %>
    <%= form.text_field :last_name %>
    </div>

    <div>
    <%= form.label :password, "Password", style: "display: block" %>
    <%= form.password_field :password %>
    </div>

    <div>
    <%= form.label :password_confirmation, "Confirm Password", style: "display: block" %>
    <%= form.password_field :password_confirmation %>
    </div>

    <div>
    <%= form.label :email, "Email Address", style: "display: block" %>
    <%= form.text_field :email %>
    </div>

    <div>
    <%= form.label :phone, "Phone Number", style: "display: block" %>
    <%= form.text_field :phone %>
    </div>
    
    <div>
      <%= form.label :delivery_address, "Delivery Address", style: "display: block" %>
      <%= form.text_area :address %>
    </div>
  
    <div>
      <%= form.label :pay_type, "Pay Type", style: "display: block" %>
      <%= form.select :pay_type, ["credit card", "debit card", "PayPal"], { prompt: "Select a payment method" }%>
    </div>
  

  
    <div>
        <%= form.label :card_number, "Card Number", style: "display: block" %>
        <%= form.text_field :card_number, autocomplete:"off" %>
    </div>
    <br>
    <div>
      <%= form.submit "Save change" %>
    </div>
  <% end %>
  