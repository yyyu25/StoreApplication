<h1>Order Details</h1>

<p><strong>Order ID:</strong> <%= @order.id %></p>
<p><strong>Total:</strong> $<%= @order.total %></p>
<p><strong>Placed at:</strong> <%= @order.created_at %></p>

<hr>

<h2>Items</h2>

<% @order.order_items.each do |item| %>
  <p>
    <%= item.product.name %> × <%= item.quantity %>
    — $<%= item.price * item.quantity %>
  </p>
<% end %>