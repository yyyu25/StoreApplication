<div id="<%= dom_id @cart %>" style="display:flex">

  <div style="width:65%; margin-right:5em">
    <div>
    <%= link_to "Back to cart", cart_path(@cart) %>
    </div>
    <br><br>
    <h3>Confirm your information</h3>
    <hr>

    <strong>Pay with <%= current_user.pay_type %> <%= current_user.card_last4digits %></strong>
    <br>
    <br>
    <strong>Shipping Address</strong>
    <br>
    <%= current_user.address %>
    <br><br>
    <%= link_to "Change", edit_user_path(current_user) %>

    <hr>

  </div>

  
  <div id="order_summary" style="width:30%; border-left:solid 1px grey;">
    <h2 style="text-align:center; margin-bottom:20px;">Order Summary</h2>
    <%=render "cartitems/order_summary", cart: @cart %>
    <%= button_to "Place Order", orders_path, method: :post, class:"checkout-btn" %>

  </div>

</div>
