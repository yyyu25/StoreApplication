<div class="<%= cycle('list_line_odd','list_line_even') %>">
  
  <div class="product-img">
    <% if product.image.attached? %>
      <%= image_tag(product.image)  %>
    <% end %>
  </div>
  <div class="discription">
      <h3><%= product.name %></h3>
      <h4><%= product.description %></h3>
      <h4>$<%= product.price %></h3>
      <% if product.available %>
        <% if product.quantity > 0 %>
          <h4><%= product.quantity %> in stock</h4>
        <% else %>
          <h4>Out of Stock</h4>
        <% end %>
      <% else %>
        <h4>Unavailable Now</h4>
      <% end %>
  </div>
  <div>
    <%= button_to "Update", edit_product_path(product), method: :get, class:"link-btn" %>
    <%= button_to "Deactivate", product, method: :delete,
    data: { turbo_confirm: "Are you sure you want to delete this product?" }, class: "link-delete-btn", form_class: "inline-form" %>

  </div>
</div>

