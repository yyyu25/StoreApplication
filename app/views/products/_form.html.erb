<%= form_with(model: product, class: "product-form") do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <% form.label :name, class: "form-label"  %>
    <%= form.text_field :name, class: "form-control", placeholder: "Product name", required:true %>
  </div>

  <div>
    <% form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Product description", required:true %>
  </div>

  <div>
    <% form.label :image, class: "form-label" %>
    <% if product.image.attached? %>
      <div class="mb-2">
        <p>Current image:</p>
        <%= image_tag product.image, style: "width:150px; border-radius:6px;" %>
      </div>
      <%= form.file_field :image, class: "form-control" %>
    <% else %>
      <%= form.file_field :image, class: "form-control", required:true %>
    <% end %>
  </div>

  <div>
    <% form.label :price, class: "form-label" %>
    <%= form.number_field :price, step: "0.01", class: "form-control", placeholder: "Sale price (minimum $0.01)", required:true %>
  </div>

  <div>
    <%= form.label :available, "Available?" %>
    <%= form.select :available, [["Yes", true], ["No", false]] %>
  </div>

  <div>
    <%= form.label :quantity, "In stock", class: "form-label" %>
    <%= form.number_field :quantity, step: 1, class: "form-control", placeholder: "Quantity in stock",required:true %>
  </div>

  <div>
    <%= form.submit "Save Product", class: "btn btn-primary" %>
  </div>
<% end %>
