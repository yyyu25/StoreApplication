<div class="product">
    <div class="image">
        <% if @product.image.attached? %>
            <%= image_tag(@product.image)  %>
        <% end %>
    </div>

    <div class="discription">
        <div>
            <p><%= link_to "Back to catalog", shopperindex_path, class:"link" %></p>
        </div>
        <h1><%= @product.name %></h1>

        <h2><%= @product.description %></h2>

        <h2>$<%= @product.price %></h2>

        <%= render partial:"add2cart", locals: { product: @product } %>
    </div>
</div>